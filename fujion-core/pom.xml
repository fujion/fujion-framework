<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.fujion</groupId>
		<artifactId>fujion-parent</artifactId>
		<version>2.2.0-SNAPSHOT</version>
	</parent>

	<name>Fujion Core Libraries</name>
	<artifactId>fujion-core</artifactId>

	<properties>
		<webjar.name>fujion</webjar.name>
        <systemjs>
        {	'packages': {
        		'': {
        			'defaultExtension': 'js'
        		}
        	},
        	
			'map': {
				'fujion-core': 'js/core',
				'fujion-widget': 'js/widget',
				'fujion-widget-css': 'css/widget',
				'fujion-detail': 'js/detail',
				'fujion-detail-css': 'css/detail',
				'fujion-grid': 'js/grid',
				'fujion-grid-css': 'css/grid',
				'fujion-tabview': 'js/tabview',
				'fujion-tabview-css': 'css/tabview',
				'fujion-treeview': 'js/treeview',
				'fujion-treeview-css': 'css/treeview',
				'fujion-paneview': 'js/paneview',
				'fujion-paneview-css': 'css/paneview',
				'fujion-picker': 'js/picker',
				'fujion-picker-css': 'css/picker',
				'fujion-upload': 'js/upload'
			}
		}
        </systemjs>
	</properties>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>META-INF/fujion-default.properties</include>
				</includes>
				<filtering>true</filtering>
			</resource>
	    </resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<configuration>
					<mainClass>org.fujion.schema.SchemaGenerator</mainClass>
					<classpathScope>compile</classpathScope>
				</configuration>
				<executions>
					<execution>
						<id>generate-root-schema</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<arguments>
								<argument>-v=${project.version}</argument>
								<argument>-r</argument>
								<argument>-t=Root Schema</argument>
								<argument>${webjar.schemadir}fsp-root.xsd</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>generate-core-schema</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<arguments>
								<argument>-v=${project.version}</argument>
								<argument>-t=Core Schema</argument>
								<argument>-p=org.fujion.component</argument>
								<argument>${webjar.schemadir}fsp-core.xsd</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.samaxes.maven</groupId>
				<artifactId>minify-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<!-- Fujion Framework -->
		<dependency>
			<groupId>org.fujion</groupId>
			<artifactId>fujion-common</artifactId>
			<version>${project.parent.version}</version>
		</dependency>
		<!-- Spring Framework -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-websocket</artifactId>
		</dependency>
		<!-- Apache Commons -->
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-beanutils</groupId>
			<artifactId>commons-beanutils</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
		</dependency>
		<!-- Jackson JSON libraries -->
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
		</dependency>		
		<!-- Web Jars -->
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-systemjs</artifactId>
		    <version>0.21.4</version>
		</dependency>
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-systemjs-plugin-css</artifactId>
		    <version>0.1.37</version>
		</dependency>
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-jquery-print</artifactId>
		    <version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>org.fujion.webjars</groupId>
			<artifactId>webjar-jquery</artifactId>
			<version>3.3.1</version>
		</dependency>
		<dependency>
			<groupId>org.fujion.webjars</groupId>
			<artifactId>webjar-jquery-ui</artifactId>
			<version>1.12.1</version>
		</dependency>
		<dependency>
			<groupId>org.fujion.webjars</groupId>
			<artifactId>webjar-bootstrap</artifactId>
			<version>3.3.7</version>
		</dependency>
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-lodash</artifactId>
		    <version>4.17.10</version>
		</dependency>
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-file-saver</artifactId>
		    <version>1.3.8</version>
		</dependency>
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-moment</artifactId>
		    <version>2.22.2</version>
		</dependency>		
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-balloon-css</artifactId>
		    <version>0.5.0</version>
		</dependency>
		<dependency>
		    <groupId>org.fujion.webjars</groupId>
		    <artifactId>webjar-jquery-scrollto</artifactId>
		    <version>2.1.2</version>
		</dependency>
		<!-- Apache HTTP components -->
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
		</dependency>
		<!-- Servlet API -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
		</dependency>
		<!-- MBean support -->
		<dependency>
			<groupId>com.udojava</groupId>
			<artifactId>JMXWrapper</artifactId>
			<version>1.4</version>
		</dependency>
		<!-- Testing -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>
</project>