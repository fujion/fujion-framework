<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:ffc="http://www.fujion.org/schema/component"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.fujion.org/schema/component
		http://www.fujion.org/schema/component-extensions.xsd">
	
	<ffc:component-scan package="org.fujion.captcha" />
	
	<bean class="org.fujion.captcha.CaptchaUtil" factory-method="getInstance">
		<property name="captchaUrl" value="${google.captcha.api.url:https://www.google.com/recaptcha/api.js}"/>
	</bean>

</beans>
